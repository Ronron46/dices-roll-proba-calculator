import matplotlib.pyplot as plt

def dé_avantage(faces):
  dé_av=[]
  for face in range(faces):
    for i in range(2*face+1):
      dé_av.append(face+1)
  return(dé_av)

def dé(nb_faces):
  return(list(range(1, nb_faces + 1)))

def combinaison(*args):
    pools = [tuple(pool) for pool in args]
    result =[[]]
    for pool in pools:
        result = [x+[y] for x in result for y in pool]
    return result

def somme(liste):
  result=[]
  for i in liste:
    s=0
    for j in i:
      s+=j
    result.append(s)
  return result



dé6 = dé(6)
dé4 = dé(4)
dé20 = dé(20)
dé8 = dé(8)
dé20av = dé_avantage(20)

res=somme(combinaison(dé20av,dé4,dé4,dé8))
max_res=max(res)
min_res=min(res)

print(len(res))

compte=[]
for i in range(0,max_res-min_res+1):
  compte.append(0)

for i in res:
  compte[i-min_res]+=1

print(compte)

abscisse=[]
for i in range(0,max_res-min_res+1):
  abscisse.append(i+min_res)

plt.bar(abscisse, compte)

print(len(compte))

def proba(compte,min,cible):
  aux=0
  for i in range(len(compte)-cible+min):
    aux+=compte[i+cible-min]
  return aux/sum(compte)

proba(compte,min(res),18)